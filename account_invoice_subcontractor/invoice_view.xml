<openerp>
    <data>

        <!-- VIEW FOR THE OBJECT : account_invoice_line -->
        <record id="view_account_invoice_line_form" model="ir.ui.view">
            <field name="model">account.invoice.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_invoice_line_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="price_subtotal" invisible="True"/>
                    <field name="subcontractor_work_ids" context="{'default_sale_price_unit': price_subtotal/quantity, 'default_quantity': quantity}" groups="account_invoice_subcontractor.group_have_subcontractor"/>
                </xpath>
            </field>
        </record>

        <!-- VIEW FOR THE OBJECT : account_invoice -->
        <record id="view_account_invoice_tree" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="amount_to_pay"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_form" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line']/tree" position="attributes">
                    <attribute name="editable"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
