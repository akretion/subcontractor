<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="product.product_product_2" model="product.product">
        <field name="subcontracted">1</field>
    </record>

    <record id="hr.employee_root" model="hr.employee">
        <field name="subcontractor_type">internal</field>
        <field name="subcontractor_company_id" ref="base.main_company"/>
    </record>

    <record model="res.users" id="base.user_root">
        <field name="groups_id" eval="[(4, ref('account_invoice_subcontractor.group_have_subcontractor')), (4, ref('account_invoice_subcontractor.group_is_subcontractor'))]"/>
        <field name="company_ids" eval="[(4, ref('base.main_company')), (4, ref('account_invoice_inter_company.company_a'))]"/>
        <field name="company_id" ref="account_invoice_inter_company.company_a"/>
    </record>

</odoo>
