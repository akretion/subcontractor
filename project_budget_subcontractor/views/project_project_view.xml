<odoo>
    <record id="edit_project" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <div name="options_active" position="after">
                <field name="use_budget" invisible="1" />
                <group
                    attrs="{'invisible': [('current_budget_id', '=', False), ('use_budget', '=', False)]}"
                >
                    <group>
                        <field name="current_budget_id" invisible="1" />
                        <field name="currency_id" invisible="1" />
                        <field
                            name="current_budget_amount"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                        <field
                            name="current_invoiced_amount"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                        <field
                            name="current_to_invoice_amount"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                        <field
                            name="current_remaining_amount"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                    </group>
                    <group>
                        <field
                            name="current_remaining_budget"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                        <field
                            name="current_budget_amount_prorata"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                        <field
                            name="current_budget_progress"
                            widget="percentage"
                            decoration-danger="current_budget_progress >= 100"
                            decoration-warning="current_budget_progress > current_time_progress and current_budget_progress &lt; 100"
                        />
                        <field name="current_time_progress" widget="percentage" />
                    </group>
                </group>
            </div>

            <page name="description_page" position="after">
                <field name="use_budget" invisible="1" />
                <page
                    name="budget_page"
                    string="Budgets"
                    attrs="{'invisible': [('use_budget', '=', False)]}"
                >
                    <field name="budget_ids">
                        <tree
                            editable="bottom"
                            decoration-bf="id and id == parent.current_budget_id"
                        >
                            <field name="id" invisible="1" />
                            <field name="currency_id" invisible="1" />
                            <field name="name" />
                            <field name="start_date" />
                            <field name="end_date" />
                            <field
                                name="budget_amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                            <field
                                name="invoiced_amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                            <field
                                name="to_invoice_amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                            <field
                                name="remaining_amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                            <field
                                name="remaining_budget"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>


    <record id="view_project_kanban" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban" />
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="after">
                <field name="use_budget" />
                <field name="current_budget_progress" />
                <field name="current_time_progress" />
            </field>
            <div class="o_project_kanban_boxes" position="inside">
                <a
                    t-if="record.use_budget and record.current_budget_progress.raw_value > 0"
                    class="o_project_kanban_box o_project_timesheet_box"
                    type="open"
                    groups="project.group_project_user"
                >
                    <div>
                        <t
                            t-esc="+(record.current_budget_progress.raw_value * 100).toFixed(2)"
                            t-options='{"widget": "float", "precision": 2}'
                        />% / <t
                            t-esc="+(record.current_time_progress.raw_value * 100).toFixed(2)"
                            t-options='{"widget": "float", "precision": 2}'
                        />%
                    </div>
                </a>
            </div>
        </field>
    </record>
</odoo>
